<?xml version="1.0"?>

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
    <ACTION NAME="toggle-dual-diff">
        <CODE>
            DualDiff.toggleFor(view);
        </CODE>
        <IS_SELECTED>
            return DualDiff.isEnabledFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="jdiff.refresh-diff">
        <CODE>
            DualDiff.refreshFor(view);
        </CODE>
    </ACTION>


    <ACTION NAME="jdiff.toggle-ignore-case">
        <CODE>
            DualDiff.toggleIgnoreCaseFor(view);
        </CODE>
        <IS_SELECTED>
            return DualDiff.getIgnoreCaseFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="jdiff.toggle-ignore-whitespace">
        <CODE>
            DualDiff.toggleIgnoreWhitespaceFor(view);
        </CODE>
        <IS_SELECTED>
            return DualDiff.getIgnoreWhitespaceFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="jdiff.next-diff">
        <CODE>
            DualDiff.nextDiff(editPane);
        </CODE>
    </ACTION>


    <ACTION NAME="jdiff.prev-diff">
        <CODE>
            DualDiff.prevDiff(editPane);
        </CODE>
    </ACTION>


    <ACTION NAME="jdiff.diff-normal-output">
        <CODE>
            DualDiff.diffNormalOutput(view);
        </CODE>
    </ACTION>
</ACTIONS>
