plugin.updater.UpdaterPlugin.activate=startup

# general plugin information
plugin.updater.UpdaterPlugin.name=Updater
plugin.updater.UpdaterPlugin.author=Shlomy Reinstein
plugin.updater.UpdaterPlugin.version=0.1
plugin.updater.UpdaterPlugin.description=Auto-update plugin

plugin.updater.UpdaterPlugin.depend.0=jdk 1.5
plugin.updater.UpdaterPlugin.depend.1=jedit 04.03.17.00
plugin.updater.UpdaterPlugin.depend.2=plugin CommonControlsPlugin 0.9.5

# action labels
updater-update-release.label=Update jEdit to latest released version
updater-update-daily.label=Update jEdit to latest daily build

# menu items
plugin.updater.UpdaterPlugin.menu=updater-update-release updater-update-daily

# option pane
plugin.updater.UpdaterPlugin.option-pane=updater
options.updater.label=Updater
options.updater.code=new updater.UpdaterOptions();
updater.options.updateLogFile=Write update log to file:
updater.options.defaultUpdateSource=Default version to use in automatic updates:
updater.options.releaseUpdateSource=Latest (released) development version
updater.options.dailyBuildUpdateSource=Latest daily build version
updater.options.updateOnStartup=Check for updates on startup
updater.options.updateEvery=Check for updates every:
updater.options.updatePeriod=days
updater.options.interactiveInstall=Interactive update (select components, install path)

# docs
plugin.updater.UpdaterPlugin.docs=index.html

# misc
updater.downloadPage=http://jedit.org/index.php?page=download
updater.downloadLinkPattern=.*<a href=\"([^\"]+)\">Java-based installer.*
updater.versionPage=http://www.jedit.org/jEdit-version.txt
updater.versionCheckPattern=^\\.build\\s+(.*)$
updater.dailyBuildVersionPage=http://www.tellurianring.com/projects/jedit-daily/index.php?dir=jEdit%2F
updater.dailyBuildVersionCheckPattern=<a href="/projects/jedit-daily/index.php\\?dir=jEdit%2F(\\d+\\d+\\d+\\d+-\\d\\d-\\d\\d_\\d+\\d+-\\d+\\d+-\\d+\\d+)%2F"
updater.dailyBuildVersionPageLinkPattern=<a href="/projects/jedit-daily/index.php\\?dir=jEdit%2F(\\d+\\d+\\d+\\d+-\\d\\d-\\d\\d_\\d+\\d+-\\d+\\d+-\\d+\\d+%2F)"
updater.dailyBuildDownloadLinkPattern=<a href="(jEdit/\\d+\\d+\\d+\\d+-\\d\\d-\\d\\d_\\d+\\d+-\\d+\\d+-\\d+\\d+/[^"]*install\.jar)
updater.dailyBuildDownloadLinkPrefix=http://www.tellurianring.com/projects/jedit-daily/

# messages
updater.msg.downloadLinkNotFound=Cannot find download link on download page.
updater.msg.downloadFailed=Failed to download the installer.
updater.msg.installerFailed=Failed to install the updated version.
updater.msg.installed=Installation completed successfully.
updater.msg.cannotFindLatestVersion=Cannot find the latest version on the jEdit version page.
updater.msg.noNewerVersion=The latest version is already installed; no need to update.
updater.msg.unknownVersionString=Version string has an unknown format.
updater.msg.updateDialogTitle=UpdaterPlugin
updater.msg.checkingLatestVersion=Checking for the latest version...
updater.msg.findLatestVersion=Looking for the latest version...
updater.msg.fetchingDownloadPage=Fetching jEdit download page...
updater.msg.downloadingNewVersion=Downloading the new version...
updater.msg.runningInstaller=Launching the installer...
updater.msg.installing=Installation in progress...
updater.msg.executionAborted=Update aborted.
updater.msg.abortingUpdate=Aborting update...
updater.msg.updateInProgress=An update is currently in progress.
updater.msg.warnBeforeUpdateMessage=This will exit jEdit and install a new version. Are you sure?

# Install launcher
updater.msg.updateDialogTitle=Updating jEdit
updater.msg.updateDialogCloseButton=Ok
updater.msg.updateDialogCancelButton=Cancel
updater.msg.waitForInstall=Please wait while the update is being installed...
updater.msg.installerDone=Installer done. You can now start jEdit if an update was installed.
updater.msg.updateErrorAbort=Encountered an unknown problem - aborting update.
