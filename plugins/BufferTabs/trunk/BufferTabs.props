options.buffertabs.label=BufferTabs
options.buffertabs.code=new buffertabs.BufferTabsOptionPane();


# Enable buffertabs by default:
buffertabs.enable=true
# Hide the regular buffer switcher
view.showBufferSwitcher=false
buffertabs.location=top

# Menu
buffertabs.popup=\
    reload \
    close-buffer \
    save \
    - \
	close-all \
    closeall-except-active \
	- \
    buffertabs.insert-name \
    buffertabs.insert-path \
    - \
    Files/Browse_Buffer_Directory \
    Files/Copy_Name_to_Clipboard \
    Files/Copy_Path_to_Clipboard \
    - \
    global-bufferset \
    view-bufferset \
    editpane-bufferset


# Actions
buffertabs.insert-name.label=Insert File Name
buffertabs.insert-path.label=Insert File Path
buffertabs.closeall-except-active.label=Close all Others
buffertabs.toggle-docks.label=Toggle Docks
# Default values
buffertabs.color-tabs=false
buffertabs.color-selected=true
buffertabs.color-mute=true
buffertabs.color-variation=false
buffertabs.color-foreground=false
buffertabs.color-selected-foreground=false

