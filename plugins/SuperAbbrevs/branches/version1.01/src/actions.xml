<?xml version="1.0"?>

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">
<ACTIONS>
    <ACTION NAME="SuperAbbrevs.shiftTab">
        <CODE>
            superabbrevs.SuperAbbrevsPlugin.handleAction(superabbrevs.Actions.ShirtTab, view, textArea, buffer);
        </CODE>
    </ACTION>
    <ACTION NAME="SuperAbbrevs.tab">
        <CODE>
        	superabbrevs.SuperAbbrevsPlugin.handleAction(superabbrevs.Actions.Tab, view, textArea, buffer);
        </CODE>
    </ACTION>
    <ACTION NAME="SuperAbbrevs.esc">
        <CODE>
            superabbrevs.SuperAbbrevsPlugin.handleAction(superabbrevs.Actions.Esc, view, textArea, buffer);
        </CODE>
    </ACTION>
    <ACTION NAME="SuperAbbrevs.showSearchDialog">
        <CODE>
            superabbrevs.SuperAbbrevsPlugin.handleAction(superabbrevs.Actions.ShowSearchDialog, view, textArea, buffer);
        </CODE>
    </ACTION>
    <ACTION NAME="SuperAbbrevs.showOptionPane">
        <CODE>
            superabbrevs.SuperAbbrevsPlugin.handleAction(superabbrevs.Actions.ShowOptionPane, view, textArea, buffer);
        </CODE>
    </ACTION>
</ACTIONS>
