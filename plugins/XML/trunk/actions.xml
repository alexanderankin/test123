<?xml version="1.0"?>

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="xml-complete-entity">
		<CODE>
			xml.XmlPlugin.completeKeyTyped(view,textArea,
				xml.XmlPlugin.ENTITY_COMPLETE,'&amp;');
		</CODE>
	</ACTION>
	<ACTION NAME="xml-complete-tag">
		<CODE>
			xml.XmlPlugin.completeKeyTyped(view,textArea,
				xml.XmlPlugin.ELEMENT_COMPLETE,'&lt;');
		</CODE>
	</ACTION>
	<ACTION NAME="xml-tree">
		<CODE>
			view.getDockableWindowManager()
				.toggleDockableWindow("xml-tree");
		</CODE>
		<IS_SELECTED>
			return view.getDockableWindowManager()
				.isDockableWindowVisible("xml-tree");
		</IS_SELECTED>
	</ACTION>
	<ACTION NAME="xml-parse">
		<CODE>
			view.getDockableWindowManager()
				.addDockableWindow("xml-tree");
			view.getDockableWindowManager()
				.getDockableWindow("xml-tree").parse(true);
		</CODE>
	</ACTION>
	<ACTION NAME="xml-keystroke-parse">
		<CODE>
			buffer.putBooleanProperty("xml.keystroke-parse",
				!buffer.getBooleanProperty("xml.keystroke-parse"));
			view.getDockableWindowManager()
				.addDockableWindow("xml-tree");
			view.getDockableWindowManager()
				.getDockableWindow("xml-tree").parse(true);
		</CODE>
		<IS_SELECTED>
			return buffer.getBooleanProperty("xml.keystroke-parse");
		</IS_SELECTED>
	</ACTION>
	<ACTION NAME="xml-insert">
		<CODE>
			view.getDockableWindowManager()
				.toggleDockableWindow("xml-insert");
		</CODE>
		<IS_SELECTED>
			return view.getDockableWindowManager()
				.isDockableWindowVisible("xml-insert");
		</IS_SELECTED>
	</ACTION>
	<ACTION NAME="xml-edit-tag">
		<CODE>
			xml.XmlPlugin.showEditTagDialog(view);
		</CODE>
	</ACTION>
</ACTIONS>
