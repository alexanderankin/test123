<!DOCTYPE ACTIONS SYSTEM "actions.dtd">
<!-- $Id: actions.xml 7606 2004-11-07 15:52:36Z orutherfurd $ -->

<ACTIONS>

	<ACTION NAME="console-automation-connect" NO_REPEAT="TRUE">
		<CODE>
			import automation.*;
			ConsoleAutomationPlugin plugin = (ConsoleAutomationPlugin)
				jEdit.getPlugin("automation.ConsoleAutomationPlugin");
			plugin.showConnectionDialog(false);
		</CODE>
	</ACTION>
	<ACTION NAME="console-automation-connect-headless" NO_REPEAT="TRUE">
		<CODE>
			import automation.*;
			ConsoleAutomationPlugin plugin = (ConsoleAutomationPlugin)
				jEdit.getPlugin("automation.ConsoleAutomationPlugin");
			plugin.showConnectionDialog(true);
		</CODE>
	</ACTION>
	<ACTION NAME="console-automation-close-current" NO_REPEAT="TRUE">
		<CODE>
			import automation.*;
			ConsoleAutomationPlugin plugin = (ConsoleAutomationPlugin)
				jEdit.getPlugin("automation.ConsoleAutomationPlugin");
			plugin.closeCurrentConnection();
		</CODE>
	</ACTION>
	<ACTION NAME="console-automation-close-connection" NO_REPEAT="TRUE">
		<CODE>
			import automation.*;
			ConsoleAutomationPlugin plugin = (ConsoleAutomationPlugin)
				jEdit.getPlugin("automation.ConsoleAutomationPlugin");
			plugin.closeConnection();
		</CODE>
	</ACTION>
	<ACTION NAME="console-automation-reload-connections" NO_REPEAT="TRUE">
		<CODE>
			import automation.*;
			ConsoleAutomationPlugin plugin = (ConsoleAutomationPlugin)
				jEdit.getPlugin("automation.ConsoleAutomationPlugin");
			plugin.reloadConnections(false);
		</CODE>
	</ACTION>
	<ACTION NAME="console-automation-reload-connections-headless" NO_REPEAT="TRUE">
		<CODE>
			import automation.*;
			ConsoleAutomationPlugin plugin = (ConsoleAutomationPlugin)
				jEdit.getPlugin("automation.ConsoleAutomationPlugin");
			plugin.reloadConnections(true);
		</CODE>
	</ACTION>
	<ACTION NAME="console-automation-show-macros" NO_REPEAT="TRUE">
		<CODE>
			import automation.*;
			ConsoleAutomationPlugin plugin = (ConsoleAutomationPlugin)
				jEdit.getPlugin("automation.ConsoleAutomationPlugin");
			plugin.showMacros();
		</CODE>
	</ACTION>

</ACTIONS>

