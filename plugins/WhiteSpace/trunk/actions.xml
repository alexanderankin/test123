        </CODE>
        <!--
        <IS_SELECTED>
            return (
                whitespace.FoldHighlight.isFoldTooltipEnabledFor(view)
            );
        </IS_SELECTED>
        -->
    </ACTION>


    <ACTION NAME="white-space.toggle-space-highlight">
        <CODE>
            highlight = whitespace.WhiteSpaceHighlight.getHighlightFor(editPane);
            if (highlight != null) {
                highlight.getSpaceHighlight().toggleEnabled();
                highlight.updateTextArea();
            }
        </CODE>
        <!--
        <IS_SELECTED>
            highlight = whitespace.WhiteSpaceHighlight.getHighlightFor(editPane);
            if (highlight == null) { return false; }
            return highlight.getSpaceHighlight().isEnabled();
        </IS_SELECTED>
        -->
    </ACTION>


