<?xml version="1.0"?>

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
    <ACTION NAME="white-space.toggle-block-highlight">
        <CODE>
             whitespace.BlockHighlight.toggleBlockHighlightFor(view);
        </CODE>
        <!--
        <IS_SELECTED>
             return whitespace.BlockHighlight.isBlockHighlightEnabledFor(view);
        </IS_SELECTED>
        -->
    </ACTION>


    <ACTION NAME="white-space.toggle-fold-highlight">
        <CODE>
            whitespace.FoldHighlight.toggleHighlightEnabledFor(buffer);
        </CODE>
        <IS_SELECTED>
            return buffer.getBooleanProperty(
                /* whitespace.FoldHighlight.FOLD_HIGHLIGHT_PROPERTY */
                "white-space.fold-highlight"
            );
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="white-space.toggle-fold-tooltip">
