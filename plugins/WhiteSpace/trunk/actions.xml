<ACTIONS>
    <ACTION NAME="white-space.toggle-block-highlight">
        <CODE>
             whitespace.BlockHighlight.toggleHighlightEnabledFor(buffer);
        </CODE>
        <IS_SELECTED>
            return buffer.getBooleanProperty(
                /* whitespace.BlockHighlight.BLOCK_HIGHLIGHT_PROPERTY */
                "white-space.block-highlight"
            );
        </IS_SELECTED>
    </ACTION>


