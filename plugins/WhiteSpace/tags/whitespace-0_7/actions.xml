<?xml version="1.0"?>

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
    <ACTION NAME="white-space.toggle-block-highlight">
        <CODE>
             BlockHighlight.toggleBlockHighlightFor(view);
        </CODE>
        <IS_SELECTED>
             return BlockHighlight.isBlockHighlightEnabledFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="white-space.toggle-fold-highlight">
        <CODE>
             FoldHighlight.toggleFoldHighlightFor(view);
        </CODE>
        <IS_SELECTED>
             return FoldHighlight.isFoldHighlightEnabledFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="white-space.toggle-fold-tooltip">
        <CODE>
             FoldHighlight.toggleFoldTooltipFor(view);
        </CODE>
        <IS_SELECTED>
             return FoldHighlight.isFoldTooltipEnabledFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="white-space.toggle-space-highlight">
        <CODE>
             WhiteSpaceHighlight.toggleSpaceHighlightFor(view);
        </CODE>
        <IS_SELECTED>
             return WhiteSpaceHighlight.isSpaceHighlightEnabledFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="white-space.toggle-tab-highlight">
        <CODE>
             WhiteSpaceHighlight.toggleTabHighlightFor(view);
        </CODE>
        <IS_SELECTED>
             return WhiteSpaceHighlight.isTabHighlightEnabledFor(view);
        </IS_SELECTED>
    </ACTION>


    <ACTION NAME="white-space.toggle-whitespace-highlight">
        <CODE>
             WhiteSpaceHighlight.toggleWhitespaceHighlightFor(view);
        </CODE>
        <IS_SELECTED>
             return WhiteSpaceHighlight.isWhitespaceHighlightEnabledFor(view);
        </IS_SELECTED>
    </ACTION>
</ACTIONS>
