# jEdit only needs to load the plugin the first time the user accesses it
# the presence of this property also tells jEdit the plugin is using the new API
# need to load at startup to register macro handler
plugin.javamacros.JavaMacrosPlugin.activate=startup

# These two properties are required for all plugins
plugin.javamacros.JavaMacrosPlugin.name=JavaMacros
plugin.javamacros.JavaMacrosPlugin.author=Denis Dzenskevich
plugin.javamacros.JavaMacrosPlugin.version=0.1

# online help
plugin.javamacros.JavaMacrosPlugin.docs=
plugin.javamacros.JavaMacrosPlugin.description=Uses compiled JVM class files as macros so macros can be written in any Java IDE
plugin.javamacros.JavaMacrosPlugin.longdescription=description.html

# we only have one dependency, jEdit 4.2final, since we use the new plugin API
plugin.javamacros.JavaMacrosPlugin.depend.0=jedit 04.02.99.00

# plugin menu
plugin.javamacros.JavaMacrosPlugin.menu=

# macro-handler
macro-handler.java.label=Java
macro-handler.java.glob=*.class

# options
