# jEdit only needs to load the plugin the first time the user accesses it
# the presence of this property also tells jEdit the plugin is using the new API
plugin.myDoggy.Plugin.activate=defer

# These two properties are required for all plugins
plugin.myDoggy.Plugin.name=MyDoggyPlugin
plugin.myDoggy.Plugin.author=Shlomy Reinstein
plugin.myDoggy.Plugin.description=MyDoggyPlugin uses MyDoggy to manage the dockable windows in jEdit.

plugin.myDoggy.Plugin.version=0.1

# Dependencies
 
plugin.myDoggy.Plugin.depend.0=jdk 1.5
plugin.myDoggy.Plugin.depend.1=jedit 04.03.12.00

plugin.myDoggy.Plugin.jars=mydoggy-api-1.5.0-SNAPSHOT.jar mydoggy-plaf-1.5.0-SNAPSHOT.jar mydoggy-res-1.5.0-SNAPSHOT.jar filters-2.0.235.jar multiplegradientpaint-1.0.jar swing-layout-1.0.3.jar swing-worker-1.1.jar swingx-0.9.1.jar TableLayout-20050920.jar

# Options
plugin.myDoggy.Plugin.option-pane=mydoggy
options.mydoggy.label=MyDoggyPlugin
options.mydoggy.code=new myDoggy.OptionPane();

# Option pane labels
options.mydoggy.pushAwayMode.label=Push away mode:
options.mydoggy.useAlternateLayout.label=Override push-away mode with jEdit alternate layout property
options.mydoggy.floatOnTop.label=Make floating dockables "always on top"
options.mydoggy.floatOsDecorations.label=Add OS decorations to floating dockables
options.mydoggy.floatAddToTaskBar.label=Add floating dockables to the task bar
options.mydoggy.enablePreview.label=Enable preview of minimized dockables
options.mydoggy.enableAnimations.label=Enable animations for docked dockables

# docs
plugin.myDoggy.Plugin.docs=index.html

