void ClassOrInterfaceBody(boolean isInterface):
{}
{
    "{" { addStartBracket(); write(); ++token_source.level; } ( ClassOrInterfaceBodyDeclaration(isInterface) )* "}" { addEndBracket(); --token_source.level; write(); }
