{
    
}
{
  LOOKAHEAD(2)
  "." "class" {
      add(".class");
    }
|
  "[" { trim(); add("["); } Expression() "]" { trim(); add("]"); }
|
    // Field access or method invocation
    "." { add("."); } t=<IDENTIFIER> { add(t); } [ Arguments() ] {
    }
|
"{" { add("{"); write(); } Expression() "}" { write(); add("}"); write(); } {
    }
/*
    For inner classes
|
  LOOKAHEAD(2)
  "." AllocationExpression()
*/
}

