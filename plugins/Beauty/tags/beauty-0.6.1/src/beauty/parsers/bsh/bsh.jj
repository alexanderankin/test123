{
}
{
  t=<INTEGER_LITERAL> { add(t); }
|
  t=<FLOATING_POINT_LITERAL> { add(t); }
|
  t=<CHARACTER_LITERAL> { add(t); } 
|
  t=<STRING_LITERAL> { add(t); } 
|
  BooleanLiteral()  
|
  NullLiteral() 
|
 VoidLiteral() 
}

