}

void AllocationExpression()  :
{ }
{
  LOOKAHEAD(2)
  "new" { add("new "); } PrimitiveType() ArrayDimensions()
|
  "new" { add("new "); } AmbiguousName()
	(
		ArrayDimensions()
	|
		// SYNTACTIC_LOOKAHEAD
