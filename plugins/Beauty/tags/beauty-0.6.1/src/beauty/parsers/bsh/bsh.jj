  ( ( "<" { add(" < "); } | "@lt" { add(" @lt "); } | ">" { add(" > "); } | "@gt" { add(" @gt "); } | "<=" { add(" <= "); } | "@lteq" { add(" @lteq "); } | ">=" { add(" >= "); } | "@gteq" { add(" @gteq "); } )
