}

void UnaryExpression(boolean trim) :
{ 
    if (trim) {
        trim(); 
    }
}
{
  ( "+" { add(" + "); } | "-" { add(" - "); } ) UnaryExpression(false)
     
|
  PreIncrementExpression()
|
  PreDecrementExpression()
|
  UnaryExpressionNotPlusMinus()
}

