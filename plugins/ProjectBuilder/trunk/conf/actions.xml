<!DOCTYPE ACTIONS SYSTEM "actions.dtd">
<ACTIONS>
	<ACTION NAME="projectbuilder-new-project">
		<CODE>
			import projectbuilder.ProjectBuilderPlugin;
			ProjectBuilderPlugin plugin = jEdit.getPlugin("projectbuilder.ProjectBuilderPlugin");
			plugin.createNewProject(view);
		</CODE>
	</ACTION>
	<ACTION NAME="projectbuilder-toggle-toolbar">
		<CODE>
			projectbuilder.ProjectBuilderPlugin.toggleToolbar();
		</CODE>
		<IS_SELECTED>
			jEdit.getBooleanProperty("options.projectbuilder.show-toolbar");
		</IS_SELECTED>
	</ACTION>
</ACTIONS>
