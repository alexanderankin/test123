# Initial default settings
tasklist.parsedelay=1000
tasklist.highlight.color=#0000ff
tasklist.table.horizontal-lines=true
tasklist.table.verticall-lines=false
tasklist.highlight.tasks=true


# Plugin toolbar buttons
tasklist.icons=Binocular.gif \
	DeleteDocument.gif \
	Document.gif \
	Exclamation.gif \
	GreenFlag.gif \
	Intranet.gif \
	Magnify.gif \
	New.gif \
	RedFlag.gif

# Task List task types
tasklist.tasktype.0.iconpath=Exclamation.gif
tasklist.tasktype.0.ignorecase=false
tasklist.tasktype.0.pattern=(?\:^|\\s+)(TODO)\:(?\:\\s+)(.+)$
tasklist.tasktype.0.sample=TODO\: blah, blah...
tasklist.tasktype.1.iconpath=Document.gif
tasklist.tasktype.1.ignorecase=false
tasklist.tasktype.1.pattern=(?\:^|\\s+)(NOTE)\:(?\:\\s+)(.+)$
tasklist.tasktype.1.sample=NOTE\: blah, blah...
tasklist.tasktype.2.iconpath=Intranet.gif
tasklist.tasktype.2.ignorecase=false
tasklist.tasktype.2.pattern=(?\:^|\\s+)(IDEA)\:(?\:\\s+)(.+)$
tasklist.tasktype.2.sample=IDEA\: blah, blah...
tasklist.tasktype.3.iconpath=Magnify.gif
tasklist.tasktype.3.ignorecase=false
tasklist.tasktype.3.pattern=(?\:^|\\s+)(QUESTION)\:(?\:\\s+)(.+)$
tasklist.tasktype.3.sample=QUESTION\: blah, blah...


