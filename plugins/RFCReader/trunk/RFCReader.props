# RFCReader jEdit Plugin
# Author: Matthieu Casanova

plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.activate=defer
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.name=RFCReader
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.author=Matthieu Casanova
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.version=0.9.1
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.depend.0=jdk 1.5
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.depend.1=jedit 04.03.10.00
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.depend.2=plugin gatchan.jedit.hyperlinks.HyperlinksPlugin 0.9.0
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.description=RFC Reader is a plugin that makes rfc reading more pleasant
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.usePluginHome=true


plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.menu=openRFC
openRFC.label=Open RFC
# Option pane
plugin.gatchan.jedit.rfcreader.RFCReaderPlugin.option-pane=rfcreader

options.rfcreader.label=RFC Reader
options.rfcreader.code=new gatchan.jedit.rfcreader.RFCReaderOptionPane();

options.rfcreader.rfcsources.0=rfc.net
options.rfcreader.rfcsources.1=ietf.org



options.rfcreader.rfcsources.rfc.net.label=http://www.rfc.net/
options.rfcreader.rfcsources.rfc.net.url=http://www.rfc.net/rfc{0}.txt
options.rfcreader.rfcsources.ietf.org.label=http://www.ietf.org/
options.rfcreader.rfcsources.ietf.org.url=http://www.ietf.org/rfc/rfc{0}.txt


#the rfc site that will be used
options.rfcreader.source=rfc.net

# default folding and sidekick parsing modes for rfc files
mode.rfc.folding=rfc-chapters
mode.rfc.customSettings=true
mode.rfc.sidekick.parser=outline
mode.rfc.hyperlink.source=rfc
