commandoENTRY(pane,ns,label,var,options)
{
	entry = new JTextField();
	value = ns.getVariable(var);
	if(value != null)
		entry.setText(value.toString());
	listener = new ActionListener()
	{
		actionPerformed(evt)
		{
			text = entry.getText();
			if(text.length() == 0)
				ns.unsetVariable(var);
			else
				ns.setVariable(var,entry.getText());
		}
	};
	entry.addActionListener(listener);
	pane.addComponent(label,entry);
}
