<?xml version="1.0" ?>

<!DOCTYPE COMMANDO SYSTEM "commando.dtd">

<COMMANDO>
	<UI>
		<CAPTION LABEL="Virtual machine settings">

		<ENTRY LABEL="Initial heap size" VARNAME="ms" DEFAULT="32" />
		<ENTRY LABEL="Maximum heap size" VARNAME="mx" DEFAULT="32" />
		<ENTRY LABEL="Additional parameters" VARNAME="other" />

		</CAPTION>

		<CAPTION LABEL="Application settings">

		<ENTRY LABEL="Main class" VARNAME="clazz" EVAL="buffer.getName()" />

		</CAPTION>
	</UI>

	<COMMANDS>
		<COMMAND SHELL="System" CONFIRM="FALSE">
			"java -ms" + ms + "m -mx"
				+ mx + "m " + other
				+ " " + clazz;
		</COMMAND>
	</COMMANDS>
</COMMANDO>
