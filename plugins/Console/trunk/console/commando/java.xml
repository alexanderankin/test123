<?xml version="1.0" ?>

<!DOCTYPE COMMANDO SYSTEM "commando.dtd">

<COMMANDO>
	<UI>
		<CAPTION>Virtual machine settings</CAPTION>
		<ENTRY LABEL="Initial heap size" VARNAME="ms" DEFAULT="32" />
		<ENTRY LABEL="Maximum heap size" VARNAME="mx" DEFAULT="32" />
		<ENTRY LABEL="Additional parameters" VARNAME="other" />

		<CAPTION>Main class specification</CAPTION>
		<ENTRY LABEL="Main class" VARNAME="class" EVAL="buffer.getName()" />
	</UI>

	<COMMANDS>
		<COMMAND CONFIRM="FALSE">
			"java -ms" + settings.ms + "m -mx"
				+ settings.mx + "m " + settings.other
				+ " " + settings.class;
		</COMMAND>
	</COMMANDS>
</COMMANDO>
