<?xml version="1.0"?>

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="clear-directory-cache">
		<CODE>
			DirectoryCache.clearAllCachedDirectories();
		</CODE>
	</ACTION>

	<ACTION NAME="forget-passwords">
		<CODE>
			FtpPlugin.forgetPasswords();
		</CODE>
	</ACTION>

	<ACTION NAME="open-ftp">
		<CODE>
			FtpPlugin.showOpenFTPDialog(view);
		</CODE>
	</ACTION>

	<ACTION NAME="save-ftp">
		<CODE>
			FtpPlugin.showSaveFTPDialog(view);
		</CODE>
	</ACTION>
</ACTIONS>
