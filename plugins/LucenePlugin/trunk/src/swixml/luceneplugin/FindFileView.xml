<?xml version="1.0" encoding="UTF-8"?>
<panel name="view" constraints="BorderLayout.CENTER" layout="GridBagLayout" size="480, 75" minimumsize="480, 75" maximumsize="480, 75">
	<label horizontalAlignment="LEFT">
		<gridbagconstraints id="gbc" insets="0,6,0,2" gridx="0" gridy="0" weightx="1" weighty="0" fill="GridBagConstraints.BOTH" />
		<![CDATA[<html><b>Enter File Name:</b></html>]]>
	</label>
	<checkbox name="filterProject" text="Restrict to files in current project.">
		<gridbagconstraints use="gbc" insets="0,2,0,2" gridx="1" gridy="0" weightx="0" weighty="0" />
	</checkbox>
	<textfield name="fileNameField">
		<gridbagconstraints use="gbc" insets="0,2,0,2" gridx="0" gridy="1" weightx="1" weighty="0" gridwidth="2"/>
	</textfield>
	<label>
		<gridbagconstraints use="gbc" gridx="0" gridy="2" weightx="1" weighty="0" insets="2,20,2,2" gridwidth="2" foreground="darkGrey"/>
		<![CDATA[<html><small>Wild Cards: ? = Single Character, * = Multiple Character</small></html>]]>
	</label>
</panel>
