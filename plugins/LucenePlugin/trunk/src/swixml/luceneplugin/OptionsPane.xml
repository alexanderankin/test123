<?xml version="1.0" encoding="UTF-8"?>
<panel name="view" constraints="BorderLayout.CENTER" layout="GridBagLayout">
	<panel border="TitledBorder(Statistics)" layout="GridBagLayout">
		<gridbagconstraints id="gbc" gridx="0" gridy="0" weightx="1" weighty="0" fill="GridBagConstraints.BOTH" />
		<label text="Last indexing ended on: " horizontalAlignment="RIGHT">
			<gridbagconstraints id="gbc0" insets="2,2,0,2" gridx="0" gridy="0" weightx="0" weighty="0" fill="GridBagConstraints.HORIZONTAL" />
		</label>
		<label text="Tue Mar 04 22:47:41 PST 2008" horizontalAlignment="LEFT">
			<gridbagconstraints use="gbc0" gridx="1" weightx="1"/>
		</label>
		<label text="Last indexing time: " horizontalAlignment="RIGHT">
			<gridbagconstraints use="gbc0" gridy="1" gridx="0"/>
		</label>
		<label text="10min 30sec" horizontalAlignment="LEFT">
			<gridbagconstraints use="gbc0" gridy="1" gridx="1" weightx="1"/>
		</label>
		<label text="Last number of directories indexed: " horizontalAlignment="RIGHT">
			<gridbagconstraints use="gbc0" gridy="2" gridx="0"/>
		</label>
		<label text="128" horizontalAlignment="LEFT">
			<gridbagconstraints use="gbc0" gridy="2" gridx="1" weightx="1"/>
		</label>
		<label text="Last number of files indexed: " horizontalAlignment="RIGHT">
			<gridbagconstraints use="gbc0" gridy="3" gridx="0"/>
		</label>
		<label text="2567" horizontalAlignment="LEFT">
			<gridbagconstraints use="gbc0" gridy="3" gridx="1" weightx="1"/>
		</label>
		<label text="Currently Indexing: " horizontalAlignment="RIGHT">
			<gridbagconstraints use="gbc0" gridy="4" gridx="0"/>
		</label>
		<label text="Yes" horizontalAlignment="LEFT">
			<gridbagconstraints use="gbc0" gridy="4" gridx="1" weightx="1"/>
		</label>
		<label text="Indexing started on: " horizontalAlignment="RIGHT">
			<gridbagconstraints use="gbc0" gridy="5" gridx="0"/>
		</label>
		<label text="Tue Mar 04 22:45:03 PST 2008" horizontalAlignment="LEFT">
			<gridbagconstraints use="gbc0" gridy="5" gridx="1" weightx="1"/>
		</label>
	</panel>
	<panel border="TitledBorder(Preferences)" layout="GridBagLayout">
		<gridbagconstraints use="gbc" gridx="0" gridy="1"/>
		<!-- Row 1 - Index interval. -->
		<label text="Index Interval:" horizontalAlignment="RIGHT">
			<gridbagconstraints id="gbc1" insets="2,2,0,2" gridx="0" gridy="0" weightx="0" weighty="0" fill="GridBagConstraints.HORIZONTAL" />
		</label>
		<panel>
			<gridbagconstraints use="gbc1" gridx="1" gridy="0" weightx="1" fill="GridBagConstraints.NONE" anchor="GridBagConstraints.WEST"/>
			<textfield id="indexInterval" name="indexInterval" columns="10" horizontalAlignment="LEFT" />
			<label text="(milliseconds)" horizontalAlignment="RIGHT" />
		</panel>
		<!-- Row 2 - File name regex. -->
		<label text="File Name Regex:" horizontalAlignment="RIGHT">
			<gridbagconstraints use="gbc1" gridx="0" gridy="1" />
		</label>
		<textfield id="fileNameRegex" name="fileNameRegex" text="\.(java|jsp|properties)">
			<gridbagconstraints use="gbc1" insets="2,7,2,2" gridx="1" gridy="1" weightx="1" />
		</textfield>
		<!-- Row 3 - Automatically index projects files. -->
		<checkbox id="indexProjects" name="indexProjects" text="Automatically index project files.">
			<gridbagconstraints use="gbc1" gridx="1" gridy="2" weightx="0" weighty="0" />
		</checkbox>
		<!-- Row 4 - Indexer Thread Pool. -->
		<label text="Thread Pool Size:" horizontalAlignment="RIGHT">
			<gridbagconstraints use="gbc1" gridx="0" gridy="3" />
		</label>
		<panel>
			<gridbagconstraints use="gbc1" gridx="1" gridy="3" weightx="1" fill="GridBagConstraints.NONE" anchor="GridBagConstraints.WEST"/>
			<textfield id="threadPoolSize" name="threadPoolSize" columns="10" horizontalAlignment="LEFT" text="1"/>
		</panel>
	</panel>
	<panel border="TitledBorder(Directories)" layout="GridBagLayout">
		<gridbagconstraints use="gbc" gridy="2" weighty="1" />
		<!-- Directory List -->
		<scrollpane>
			<gridbagconstraints id="gbc2" gridx="0" gridy="0" weightx="1" weighty="1" fill="GridBagConstraints.BOTH"/>
			<list id="directoryList" name="directoryList"></list>
		</scrollpane>
		<!-- Action Panel -->
		<panel layout="GridBagLayout">
			<gridbagconstraints use="gbc2" gridx="0" gridy="1" weightx="1" weighty="0" fill="GridBagConstraints.BOTH"/>
			<rolloverbutton icon="org/gjt/sp/jedit/icons/Plus.png" action="addDirectory">
				<gridbagconstraints id="gbc3" insets="0,0,0,0" ipadx="0" ipady="0" gridx="0" gridy="0" weightx="0" weighty="0" fill="GridBagConstraints.NONE" />
			</rolloverbutton>
			<rolloverbutton icon="org/gjt/sp/jedit/icons/Minus.png" action="removeDirectory">
				<gridbagconstraints use="gbc3" insets="0,0,0,0" ipadx="0" ipady="0" gridx="1" weightx="0" weighty="0" fill="GridBagConstraints.NONE" />
			</rolloverbutton>
			<label text="">
				<gridbagconstraints use="gbc3" gridx="2" weightx="1" />
			</label>
		</panel>
	</panel>
</panel>
