<?xml version="1.0"?>
<!DOCTYPE ACTIONS SYSTEM "actions.dtd">
<ACTIONS>
	<ACTION NAME="lucene.remove-index" NO_REPEAT="TRUE">
		<CODE>
            String indexName = gatchan.jedit.lucene.LucenePlugin.instance.chooseIndex();
            if (indexName != null)
				gatchan.jedit.lucene.LucenePlugin.instance.removeIndex(indexName);
		</CODE>
	</ACTION>
	<ACTION NAME="lucene.close-all-indexes" NO_REPEAT="TRUE">
		<CODE>
            		gatchan.jedit.lucene.LucenePlugin.instance.closeAllIndexes();
		</CODE>
	</ACTION>
</ACTIONS>

