plugin.foldTools.Plugin.activate=startup

# general plugin information
plugin.foldTools.Plugin.name=FoldTools
plugin.foldTools.Plugin.author=Shlomy Reinstein
plugin.foldTools.Plugin.version=0.1
plugin.foldTools.Plugin.description=Shows the fold context of the caret in a dockable window.

plugin.foldTools.Plugin.depend.0=jdk 1.6
plugin.foldTools.Plugin.depend.1=jedit 04.04.01.00

# action labels
show-fold-context.label=Show fold context of caret

# menu items
plugin.foldTools.Plugin.menu=show-fold-context fold-context

# dockables
fold-context.title=Fold Context
fold-context.longtitle=Fold Context of Caret
fold-context.label=Fold Context

# option pane
plugin.foldTools.Plugin.option-pane=foldTools
options.foldTools.label=FoldTools
options.foldTools.code=new foldTools.OptionPane();
messages.foldTools.linesBefore=Number of lines preceding fold start:
messages.foldTools.linesAfter=Number of lines following fold start:
messages.foldTools.followCaretDelay=When following caret, wait (milliseconds) after caret is moved:

# docs
plugin.foldTools.Plugin.docs=index.html


