<?xml version="1.0" ?>
<project name="QuickOpen" default="build" basedir=".">
    <property file="build.properties"/>
    <property file="../build.properties"/>
    <property file="${user.home}/.build.properties"/>
    <property file="${user.home}/build.properties"/>
    <property name="compiler.source" value="1.6" />
    <property name="compiler.target" value="1.6" />
    <property name="src.dir" value="src/main/java" />
	

    <import file="${build.support}/plugin-build.xml" />
	
	<!-- If you want any extra files to be included with your plugin's jar,
	such as custom images, you need to specify them here. -->
    <selector id="packageFiles">
        <and>
            <or>
                <filename name="src/main/resources/*.xml" />
                <filename name="src/main/resources/*.html" />
                <filename name="src/main/resources/*.props" />
            </or>
        </and>
    </selector>
	
    <path id="project.class.path">
        <pathelement location="${jedit.install.dir}/jedit.jar"/>
        <pathelement location="${src.dir}"/>
    </path>

</project>
