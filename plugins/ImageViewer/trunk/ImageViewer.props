#-----------------------------------
# Properties for ImageViewer Plugin
#-----------------------------------

plugin.imageviewer.ImageViewerPlugin.name=ImageViewer
plugin.imageviewer.ImageViewerPlugin.author=Dale Anson
plugin.imageviewer.ImageViewerPlugin.version=1.2
plugin.imageviewer.ImageViewerPlugin.activate=startup
plugin.imageviewer.ImageViewerPlugin.description=Displays image files when selected from ProjectViewer or File Browser

# dependencies
plugin.imageviewer.ImageViewerPlugin.depend.0=jdk 1.5
plugin.imageviewer.ImageViewerPlugin.depend.1=jedit 04.03.16.00
plugin.imageviewer.ImageViewerPlugin.depend.2=optional plugin projectviewer.ProjectPlugin 2.1.3.7

# docs
plugin.imageviewer.ImageViewerPlugin.docs=index.html

# titles for DockableWindowManager
imageviewer.title=Image Viewer
imageviewer.label=Image Viewer

# labels
imageviewer.clear=Clear
imageviewer.zoomout=Zoom Out
imageviewer.zoomin=Zoom In
imageviewer.showimage.label=View Image

# for File System Browser
plugin.imageviewer.ImageViewerPlugin.browser-menu=imageviewer.showimage

# for option pane
plugin.imageviewer.ImageViewerPlugin.option-pane=imageviewer
options.imageviewer.label=Image Viewer
options.imageviewer.code=new imageviewer.OptionPane();
imageviewer.allowVFSMouseOver.label=Show images on mouse over/click in File System Browser
imageviewer.allowPVMouseOver.label=Show images on mouse over/click in ProjectViewer
imageviewer.mouseoption.label=Display images on:
imageviewer.mouseover.label=Mouse over
imageviewer.mouseclick.label=Mouse click

# for PV 2.1.3.7
plugin.projectviewer.imageviewer.ImageViewerPlugin.context-menu-actions=imageviewer.ImageViewerPVAction
