<!DOCTYPE ACTIONS SYSTEM "actions.dtd">
<!-- $Id: actions.xml 7606 2004-11-07 15:52:36Z orutherfurd $ -->

<ACTIONS>

	<ACTION NAME="show-call-tree" NO_REPEAT="TRUE">
		<CODE>
			wm.addDockableWindow(browser.GlobalPlugin.CALL_TREE_BROWSER);
			browser.CallTree.instanceFor(view).show(view);
		</CODE>
	</ACTION>
	<ACTION NAME="show-references" NO_REPEAT="TRUE">
		<CODE>
			wm.addDockableWindow(browser.GlobalPlugin.REFERENCE_BROWSER);
			browser.ReferenceList.instanceFor(view).show(view);
		</CODE>
	</ACTION>
	<ACTION NAME="show-definitions" NO_REPEAT="TRUE">
		<CODE>
			wm.addDockableWindow(browser.GlobalPlugin.DEFINITION_BROWSER);
			browser.DefinitionList.instanceFor(view).show(view);
		</CODE>
	</ACTION>
	
</ACTIONS>

