<?xml version="1.0"?>

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
		<ACTION NAME="xslt.environment">
				<CODE>
						String result = xslt.XSLTProcessor.getInstance().checkEnvironment();
						Macros.message(view, result);
				</CODE>
		</ACTION>

		<ACTION NAME="xslt.process">
				<CODE>
						xslt.XSLTProcessor.getInstance().processFile(view, buffer);
				</CODE>
		</ACTION>

		<ACTION NAME="xslt.repeat-last">
				<CODE>
						xslt.XSLTProcessor.repeatLast(view);
				</CODE>
		</ACTION>
</ACTIONS>
