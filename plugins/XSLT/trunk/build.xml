<?xml version="1.0"?>

<project name="xslt" default="jar" basedir=".">

	<property name="plugin.src" value="xslt" />
	<property name="plugin.build" value="." />
	<property name="jedit.jars" value=".." />
	<property name="jedit.home" value="/usr/java/jedit" />

	<path id="build.classpath">
		<!-- External plugin dependencies -->
		<pathelement path="../xalan.jar" />
		<!-- Other plugin dependencies -->
		<pathelement path="../EditBus.jar" />
		<!-- The main jEdit library -->
		<pathelement path="../../jedit.jar" />
	</path>

	<target name="compile">
		<javac srcdir="${plugin.src}" destdir="${plugin.build}" deprecation="on">
			<classpath>
				<path refid="build.classpath"/>
			</classpath>
		</javac>
	</target>

	<target name="clean">
		<delete>
			<fileset dir="." includes="**/*.class"/>
		</delete>
	</target>

	<target name="jar" depends="clean,compile">
		<jar jarfile="${jedit.jars}/${ant.project.name}.jar"
			 basedir="${plugin.build}"
			 includes="**/*.class,**/*.xml,**/*.html,**/*.props,**/*.gif"
			 excludes="build.xml"
		/>
	</target>

	<target name="package" depends="jar">
		<zip zipfile="${ant.project.name}.zip">
			<zipfileset dir="${basedir}" prefix="${ant.project.name}" excludes="${ant.project.name}.zip,lib/*.jar,**/*.class" />
			<zipfileset dir="${jedit.jars}" includes="${ant.project.name}.jar" />
			<zipfileset dir="${plugin.lib}" includes="*.jar" />
		</zip>
	</target>

</project>
