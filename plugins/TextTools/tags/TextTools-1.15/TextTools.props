view.status.textTools.rectangular-selection-required=rectangular selection required

# option pane labels
options.toggle-comments.line-comments.title=Line comment settings
options.toggle-comments.commentAsBlock.title=Comment or un-comment entire selection (don't toggle individual lines)
options.toggle-comments.indentAtLineStart.title=Insert line comments at start of line
options.toggle-comments.indentWithCode.title=Insert line comments after leading whitespace
options.toggle-comments.indentAsBlock.title=Align line comments at leftmost indent of selected block
options.toggle-comments.keepSelected.title=Keep selection after toggling comments?

# option defaults
options.toggle-comments.commentAsBlock=true
options.toggle-comments.indentAtLineStart=false
