plugin.perl.Plugin.activate=defer

# general plugin information
plugin.perl.Plugin.name=Perl
plugin.perl.Plugin.author=Shlomy Reinstein
plugin.perl.Plugin.version=0.1
plugin.perl.Plugin.description=This plugin provides an interface to the Perl debugger

# Dependencies
 
plugin.perl.Plugin.depend.0=jdk 1.6
plugin.perl.Plugin.depend.1=jedit 04.04.01.00
plugin.perl.Plugin.depend.2=plugin CommonControlsPlugin 0.9.4
	
# action labels
perl-dbg-select.label=Debug...
perl-dbg-launch-configs.label=Edit launch configurations...
perl-dbg-go.label=Go!
perl-dbg-next.label=Next
perl-dbg-next-exp.label=Next expression
perl-dbg-step.label=Step
perl-dbg-step-exp.label=Step expression
perl-dbg-return.label=Return from the current function
perl-dbg-quit.label=Quit
perl-dbg-run-to-cursor=Run to cursor
perl-dbg-toggle-breakpoint.label=Toggle breakpoint
perl-dbg-watch-selection.label=Add selected text to watches

# menu items
plugin.perl.Plugin.menu=\
	perl-dbg-select \
	perl-dbg-launch-configs \
	- \
	perl-dbg-go \
	perl-dbg-next \
	perl-dbg-next-exp \
	perl-dbg-step \
	perl-dbg-step-exp \
	perl-dbg-return \
	perl-dbg-run-to-cursor \
	- \
	perl-dbg-quit \
	perl-dbg-toggle-breakpoint \
	perl-dbg-watch-selection \
	- \
	perl-dbg-locals \
	perl-dbg-watches \
	perl-dbg-stack \
	perl-dbg-breakpoints \
	perl-dbg-panel

# dockables
perl-dbg-locals.title=Locals
perl-dbg-locals.label=Locals
perl-dbg-watches.title=Watches
perl-dbg-watches.label=Watches
perl-dbg-stack.title=Stack
perl-dbg-stack.label=Stack
perl-dbg-breakpoints.title=Breakpoints
perl-dbg-breakpoints.label=Breakpoints
perl-dbg-panel.title=Control Panel
perl-dbg-panel.label=Control Panel

