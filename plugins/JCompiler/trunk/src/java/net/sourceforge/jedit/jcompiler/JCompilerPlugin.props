plugin.net.sourceforge.jedit.jcompiler.JCompilerPlugin.version=0.6.0
plugin.net.sourceforge.jedit.jcompiler.JCompilerPlugin.docs=index.html


########################################
# MISC labels                          #
########################################
jcompiler.open.label=JCompiler
options.jcompiler.label=JCompiler

########################################
# Menu definition                      #
########################################
jcompiler.label=Build File
jcompiler.shortcut=S+F6

jpkgcompiler.label=Build Package(s)
jpkgcompiler.shortcut=S+F7

jpkgrebuild.label=Rebuild Package(s)
jpkgrebuild.shortcut=S+F8

jcompiler-menu=jcompiler jpkgcompiler jpkgrebuild 
