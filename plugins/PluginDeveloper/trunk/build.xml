<?xml version="1.0" ?>
<project name="PluginDeveloper" default="build" basedir=".">
	<property file="build.properties" />
	<property file="../build.properties" />
	<property name="compiler.source" value="1.5" />
	<property name="compiler.target" value="1.5" />
	<property name="src.dir" value="src/main" />
	<property name="src.resources.dir" value="src/main/resources"/>
	<property name="user-doc.out" value="src/main/docs/user-guide.html" />
	<property name="jedit.plugins.dir" value="${install.dir}" />
	<import file="${build.support}/plugin-build.xml" />

	<!-- Project ClassPath -->
	<path id="project.class.path">
		<fileset dir="${build.classes}">
			<filename name="**/*" />
		</fileset>
		<fileset dir="${jedit.plugins.dir}">
			<filename name="groovy-all*.jar" />
		</fileset>
	</path>
	
	<target name="build.prepare">
		<!-- Copy over the Project Templates -->
		<mkdir dir="${build.classes}" />
		<copy todir="${build.classes}">
			<fileset dir="${src.resources.dir}">
				<filename name="**/*" />
			</fileset>
		</copy>
	</target>
	
	<!-- Overridden to use joint Groovy compilation -->
	<target name="compile">
		<!-- Compile the ProjectBuilder groovy classes -->
		<echo>${build.classes}</echo>
		<groovyc destdir="${build.classes}">
			<src>
				<path>
					<pathelement location="${src.dir}" />
				</path>
			</src>
			<javac debug="${compiler.debug}"
					debuglevel="${compiler.debuglevel}"
					optimize="${compiler.optimize}"
					deprecation="${compiler.deprecation}"
					verbose="${compiler.verbose}"
					nowarn="${compiler.nowarn}"
					target="${compiler.target}"
					source="${compiler.source}"
					listfiles="${compiler.listfiles}"
					fork="${compiler.fork}">
				<classpath refid="default.class.path" />
				<classpath refid="project.class.path" />
			</javac>
		</groovyc>
	</target>
	
	<target name="format">
		<jalopy convention="jalopy.xml" classpathref="project.class.path" repository="false">
			<fileset dir="${src.java.dir}">
				<include name="**/*.java" />
			</fileset>
		</jalopy>
	</target>
	
	<taskdef name="groovyc" classname="org.codehaus.groovy.ant.Groovyc" classpath="${jedit.plugins.dir}/groovy-all-1.5.6.jar" />
	<!--taskdef name="jalopy" classname="com.triemax.JalopyTask" /-->
</project>
