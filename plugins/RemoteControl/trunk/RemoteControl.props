# Remote control jEdit Plugin
# Author: Matthieu Casanova

plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.activate=startup
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.name=RemoteControl
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.author=Matthieu Casanova
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.version=1.0.0
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.docs=docs/RemoteControl.html
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.description=Remote control is a plugin that allows the user to remotely control jEdit.
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.depend.0=jdk 1.5
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.depend.1=jedit 04.03.99.00
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.jars=xstream.jar jettison.jar
plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.usePluginHome=true

remotecontrol.port=53348
remotecontrol.pincode=1234
remotecontrol.welcomeservice=challenge

plugin.com.kpouer.jedit.remotecontrol.RemoteControlPlugin.option-pane=remotecontrol.option-pane
options.remotecontrol.option-pane.label=Remote Control
options.remotecontrol.option-pane.code=new com.kpouer.jedit.remotecontrol.RemoteControlOptionPane();


remotecontrol.port.label=Set the tcp port that will be listen for remote control connections:
remotecontrol.pincode.label=Set the pincode:
remotecontrol.pincode.detail=<html>The pincode is a security element that you have to choose.<br> You have to set\
  the same token on your remote<br> so it can communicate with jEdit with some security</html>