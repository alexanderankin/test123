<!-- $Id$
-->

<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="nativebrowser.menu-bar">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).toggleMenuBar();
		</CODE>
	</ACTION>
	<ACTION NAME="nativebrowser.home">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).home();
		</CODE>
	</ACTION>
	<ACTION NAME="nativebrowser.back">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).back();
		</CODE>
	</ACTION>
	<ACTION NAME="nativebrowser.forward">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).forward();
		</CODE>
	</ACTION>
	<ACTION NAME="nativebrowser.reload">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).reload();
		</CODE>
	</ACTION>
	<ACTION NAME="nativebrowser.render-buffer">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).renderBuffer(view);
		</CODE>
	</ACTION>
	<ACTION NAME="nativebrowser.set-homepage">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).setHomepage(view, view.getBuffer().getPath());
		</CODE>
	</ACTION>
	<ACTION NAME="nativebrowser.browse">
		<CODE>
			wm.addDockableWindow(nativebrowser.NativeBrowserPlugin.NAME);
			wm.getDockableWindow(nativebrowser.NativeBrowserPlugin.NAME).browse(view, view.getBuffer().getPath());
		</CODE>
	</ACTION>
</ACTIONS>

